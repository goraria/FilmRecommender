<Window x:Class="FilmRecommender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmRecommender"
        xmlns:localPanel="clr-namespace:FilmRecommender.Panel"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <localPanel:SideBar x:Name="sidebar" Grid.Column="0" />
        <localPanel:ContentBar x:Name="contentbar" Grid.Column="1" />
    </Grid>
</Window>
