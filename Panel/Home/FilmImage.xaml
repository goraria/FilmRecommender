<UserControl x:Class="FilmRecommender.Panel.Home.FilmImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilmRecommender.Panel.Home"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderThickness="5" CornerRadius="5" Margin="5" BorderBrush="#FFFFFFFF">
            <Grid Background="#FFFFFFFF">
                <Image x:Name="imageDisplay" Stretch="Uniform"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
