<Page x:Class="FilmRecommender.Panel.Home.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FilmRecommender.Panel.Home"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <Button Content="Hot" Width="150" Height="50" Margin="5" FontFamily="Arial" FontSize="14" FontWeight="Bold" Click="NavigateToHot" />
            <Button Content="New" Width="150" Height="50" Margin="5" FontFamily="Arial" FontSize="14" FontWeight="Bold" Click="NavigateToNew" />
        </WrapPanel>
        <Frame x:Name="HomeFrame" NavigationUIVisibility="Hidden" Grid.Row="1" />
    </Grid>

</Page>
