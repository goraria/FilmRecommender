<Page x:Class="FilmRecommender.Panel.Recommend.Recommend"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FilmRecommender.Panel.Recommend"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Recommend">

    <Grid>
        <Border BorderThickness="5" CornerRadius="5" Margin="5" BorderBrush="#FFAA00FF">
            <Grid Background="#FFAA00FF">
                <local:InputData HorizontalAlignment="Left" Width="200"/>
                <local:FilmInfo/>
                <local:FilmImage/>
            </Grid>
        </Border>
    </Grid>
</Page>
